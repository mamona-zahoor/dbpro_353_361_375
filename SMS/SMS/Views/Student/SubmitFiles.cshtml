@model SMS.Models.SubmitFiles
@{ var id = Request.QueryString["Stu"];}
@using (Html.BeginForm("SubmitFiles", "Student",new { q = id}, FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>SubmitFiles</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  <b>You have to submit a zipped folder containing your files.</b> 
        <br/>

      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="file" name="Zip" />
                
                <br/>
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}<div>
    @Html.ActionLink("Back to List", "Index")
</div>
